{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
